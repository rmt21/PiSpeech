<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".speechMain">

    <TextView android:id="@+id/text1" android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/listView"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/text1"
        android:layout_toEndOf="@+id/text1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/speakButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ipAddress"
        android:layout_toEndOf="@+id/text1"
        android:layout_below="@+id/text1"
        android:layout_toRightOf="@+id/text1"
        android:layout_marginTop="70dp"
        android:layout_alignRight="@+id/speakButton"
        android:layout_alignEnd="@+id/speakButton" />

</RelativeLayout>
